---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me";

const identity = {
    firstName: "Jomkit",
    country: "United States",
    occupation: "Software Engineer", 
    hobbies: ["programming", "cooking", "snowboarding", "reading", "martial arts", "weightlifting", "building model kits", "studying languages"]
}

const skills = ["React", "TypeScript", "Python", "Flask", "PostgreSQL", "Next.js", "Astro.js"]

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<BaseLayout pageTitle={pageTitle}>
    <style define:vars={{skillColor, fontWeight, textCase}}>
        .skill {
            color: var(--skillColor);
            font-weight: var(--fontWeight);
            text-transform: var(--textCase);
        }
    </style>

    <h2>... and my new Astro site!</h2>
    <p>This is part of the astro blog tutorial. This About Me page is also the second page of my Astro site.</p>

    <p>I'll keep updating as I complete more of the tutorial, so keep checking back!</p>

    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
    </ul>

    <p>My skills are:</p>
    <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}

</BaseLayout>
